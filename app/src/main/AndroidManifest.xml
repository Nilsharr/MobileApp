<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidApp">
        <activity android:name="com.example.app.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.app.activities.GradesFormActivity"
            android:label="@string/toolbar_name_grades_average" />
        <activity
            android:name="com.example.app.activities.GradesSelectionActivity"
            android:label="@string/toolbar_name_grades_average" />

        <activity
            android:name="com.example.app.activities.PhonesDatabaseFormActivity"
            android:label="@string/toolbar_name_phones_database_app" />
        <activity
            android:name="com.example.app.activities.PhonesDatabaseBrowsingActivity"
            android:label="@string/toolbar_name_phones_database_app" />

        <activity
            android:name="com.example.app.activities.DrawingActivity"
            android:label="@string/toolbar_name_drawing_app" />

        <activity
            android:name="com.example.app.activities.FileDownloadActivity"
            android:label="@string/toolbar_name_file_download_app" />

    </application>

</manifest>